<resources>

    <style name="Theme.Tinkoff" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/black</item>

        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <item name="background">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

    </style>

    <style name="Theme.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabSelectedTextColor">?attr/colorSecondary</item>
        <item name="tabIndicatorColor">?attr/colorSecondary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabTextAppearance">@style/Theme.TabLayout.Text</item>
    </style>

    <style name="Theme.TabLayout.Text" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>